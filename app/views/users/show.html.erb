<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.videos.any? %>
      <h3>My videos (<%= @user.videos.count %>)</h3>
      <ol class="videos">
        <%= render @videos %>
      </ol>
      <%= will_paginate @videos %>
    <% end %>
  </div>
</div>
